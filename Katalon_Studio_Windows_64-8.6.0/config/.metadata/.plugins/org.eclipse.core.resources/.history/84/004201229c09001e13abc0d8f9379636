int[] test_data = [1,2,3,4,5,6,7,8,9];

ArrayList<Integer> even_numbers = new ArrayList<Integer>() //ArrayList là một lớp được sd để tạo ra các đối tượng trong ds có thể thay đổi kích thước.
ArrayList<Integer> odd_numbers = new ArrayList<Integer>()


for (int i=0; i < test_data.length; i++) //test_data.lngth là một thuộc tính của mảng, để trả về số lượng phần tử của mảng
	 {
	
	if(test_data[i] %2 ==0) {
		
		even_numbers.add(test_data[i]);
		
	} else {
		
		odd_numbers.add(test_data[i]);
	}
	
}
System.out.println("Even Numbers:" + even_numbers);
System.out.println("Odd Numbers:" + odd_numbers);